[flake8]
# Match Black's line length (configured in pyproject.toml)
max-line-length = 100

# Ignore specific errors that conflict with Black
# E203: Whitespace before ':' (Black formats this way)
# W503: Line break before binary operator (Black prefers this)
extend-ignore = E203, W503

# Exclude directories
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache

# Per-file ignores
# F401: Allow unused imports in __init__.py files
# E402: Allow module level imports not at top in test files (due to sys.path.insert)
# F401: Allow unused imports in test files (e.g., pytest fixtures)
per-file-ignores =
    __init__.py: F401
    tests/*.py: E402, F401